#include<stdio.h>
int input()
{
	int num1,den1, num2,den2;
	printf("Enter the fractions:");
	scanf("%d %d",&num1,&den1,&num2,&den2);
}
int compute(int num3, int den3)
{
	int num1,num2,den1,den2;
	den3=den2*den1;
	num3=(num1)*(den3/den1)+(num2)*(den3/den2);
}
void output(int r)
{
	printf("%d/%d+%d/%d is %d/%d",r);
}
int main()
{
	int a=input();
	int c;
	int b=compute(a,c);
	output(b);
}
