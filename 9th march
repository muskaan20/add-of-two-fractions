#include<stdio.h>
int input()
{
  int num1, num2;
  int den1,den2;
  printf("Enter the fractions:");
  scanf("%d/%d %d/%d",&num1,&den1,&num2,&den2);
}
int compute(int den3,int num3)
{
  int num1,num2;
  int den1,den2;
  den3=(num1*den2)+(num2*den1);
  num3=den3/(den1*den2);
}
void output(int r)
{
  printf("The sum of two fractions is %d/%d",r);
}
int main()
{
  int a,b,r,add;
  a=input();
  r=compute(a,b);
  output(r);
}
